<style>
    .food-icon {
        font-size: 2rem;
        opacity: 0.3;
        transition: transform 0.2s ease, opacity 0.2s ease;
        cursor: pointer;
        background: none;
        border: none;
        padding: 0;
    }

        .food-icon:hover {
            transform: scale(1.2);
            opacity: 0.8;
        }

        .food-icon.active {
            opacity: 1;
            filter: drop-shadow(0 0 4px #f59e0b); /* glowing amber highlight */
        }

    .food-icon-display {
        font-size: 2rem;
        opacity: 0.3;
        transition: transform 0.2s ease, opacity 0.2s ease;
        cursor: default !important;
        background: none;
        border: none;
        padding: 0;
    }

        .food-icon-display.active {
            opacity: 1;
            filter: drop-shadow(0 0 4px #f59e0b); /* glowing amber highlight */
        }

    .food-icon-container {
        margin-top: -6px;
    }

    .form-container {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

        .form-container.hide {
            opacity: 0;
            transform: translateY(20px);
            pointer-events: none;
            height: 0;
            margin: 0;
        }

        .form-container.show {
            opacity: 1;
            transform: translateY(0);
            pointer-events: auto;
            height: auto;
        }

    .form-wrapper {
        overflow: hidden; /* keeps the hidden form from taking space */
    }

    .form-button-group {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    .icon-button {
        padding: 1px 6px;
        border: none;
    }

    .meal-card-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .meal-card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .meal-card-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }

    .font-caption {
        font-size: 14px;
    }

    .validation-message {
        font-size: 14px;
    }
</style>


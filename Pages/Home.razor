@page "/"
@using CaloriesTracker.Models

<div class="meal-card-row">
    <h3 id="meal-form">@selectedDate.ToString("dd MMM yyyy")</h3>

    <div class="form-button-group" style="display: @(showMealForm ? "none" : "")">
        <button class="btn btn-outline-primary" @onclick='() => showMealForm = true'>Add New Meal</button>
    </div>
</div>

<div class="form-wrapper">
    <div class="form-container @(showMealForm ? "show" : "hide")">
        <EditForm Model="inputMeal" OnValidSubmit="UpsertMeal">
            <DataAnnotationsValidator />

            <div class="meal-card-row mb-2">
                @if (inputMeal.Id == Guid.Empty)
                {
                    <h4>Add Meal</h4>
                }
                else
                {
                    <h4>Edit Meal</h4>
                }
                <button class="btn btn-outline-secondary icon-button" type="button" title="Close" @onclick='() => { showMealForm = false; Clear(); }'>
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="mb-2">
                <label>Meal Name</label>
                <InputText class="form-control" @bind-Value="inputMeal.MealName" />
                <ValidationMessage For="@(() => inputMeal.MealName)" />
            </div>
            <div class="mb-2">
                <label>Date</label>
                <InputDate class="form-control" @bind-Value="inputMeal.Date" />
                <ValidationMessage For="@(() => inputMeal.Date)" />
            </div>
            <div class="mb-2">
                <label>Fullness: @inputMeal.Fullness</label>
                <div class="food-icon-container">
                    @foreach (var level in Enum.GetValues<Fullness>())
                    {
                        <button class="food-icon @((int)inputMeal.Fullness >= (int)level ? "active" : "")" type="button"
                                @onclick="() => inputMeal.Fullness = level">
                            🍔
                        </button>
                    }
                </div>
                <ValidationMessage For="@(() => inputMeal.Fullness)" />
            </div>
            <div class="mb-2">
                <label>Calories</label>
                <InputNumber class="form-control" @bind-Value="inputMeal.Calories" />
                <label class="font-caption">kcal</label>
                <ValidationMessage For="@(() => inputMeal.Calories)" />
            </div>
            <div class="mb-2">
                <label>Meal Type</label>
                <InputSelect @bind-Value="inputMeal.MealType" class="form-select">
                    @foreach (var value in Enum.GetValues(typeof(MealType)))
                    {
                        <option value="@value">@value</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => inputMeal.MealType)" />
            </div>
            <div class="form-button-group">
                <button class="btn btn-primary" type="submit">Save</button>
                <button class="btn btn-secondary" type="button" @onclick="Clear">Clear</button>
            </div>
        </EditForm>
    </div>
</div>

<hr />

<h4 class="mt-3">Breakfast</h4>
<div class="meal-card-container">
    @foreach (var item in meals.Where(x => x.MealType == MealType.Breakfast && x.Date == selectedDate))
    {
        <div class="meal-card">
            <div class="meal-card-row mb-2">
                <strong>@item.MealName</strong>
                <label class="font-caption">@item.Date.ToString("dd MMM yyyy")</label>
            </div>
            <div class="mb-2">
                <label>Fullness: @item.Fullness</label>
                <div class="food-icon-container">
                    @foreach (var level in Enum.GetValues<Fullness>())
                    {
                        <button class="food-icon-display @((int)item.Fullness >= (int)level ? "active" : "")">
                            🍔
                        </button>
                    }
                </div>
            </div>
            <div class="meal-card-row">
                <label>@item.Calories kcal</label>
                <div>
                    <button class="btn btn-outline-secondary icon-button" title="Edit" @onclick='() => EditMealAsync(item)'>
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-outline-secondary icon-button" title="Delete" @onclick='() => DeleteMeal(item)'>
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>


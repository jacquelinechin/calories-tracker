    }

    .form-button-group {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    .icon-button {
        padding: 1px 6px;
        border: none;
    }

    .meal-card-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .meal-card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .meal-card-row {
        display: flex;
        justify-content: space-between;

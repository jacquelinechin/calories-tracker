    }

    /* ===========================
           Calendar Layout
        =========================== */
    .calendar {
        max-width: 500px;
        margin: 0 auto;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-weight: 600;
        font-size: 0.9rem;
    }

        .calendar-header button {
            background-color: transparent;
            border: none;
            border-radius: 8px;
            padding: 0.3rem 0.6rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .calendar-header button:hover {
                background-color: rgba(0, 0, 0, 0.37);
            }

    /* ===========================
           Calendar Grid
        =========================== */
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 6px;
    }

    .calendar-week {
        text-align: center;
        font-size: 0.5rem;
    }

    .calendar-cell {
        border-radius: 8px;
        text-align: center;
        transition: transform 0.15s, box-shadow 0.15s;
        cursor: pointer;
        min-height: 2.5rem;
        margin: 2px;
    }

        .calendar-cell:hover {
            transform: scale(1.05);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        /* Highlight today's date */
        .calendar-cell.today {
            font-weight: 600;
        }

        .calendar-cell.selected {
            border: 2px solid #0078d7;
            margin: 0;
        }

        /* Day number and calories text */
        .calendar-cell .day {
            font-size: 0.9rem;
        }

        .calendar-cell .calories {
            font-weight: 400;
            font-size: 0.7rem;
        }

    /* ===========================
           Color Levels (based on total calories)
        =========================== */
